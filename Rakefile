require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('hivemeta', '0.0.1') do |p|
  p.description    = 'Use the hive metadb to write map/reduce and query info'
  p.url            = 'http://github.com/fsfiii/hivemeta'
  p.author         = 'Frank Fejes'
  p.email          = 'frank@fejes.net'
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = []
end
